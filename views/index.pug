extends layout

block content
  div(class='loading')
    span Loading...
  div(class='reticule', id='reticule')
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    div(class='chat')
      div(class='chat-header')
        a(class='user-count') 
        a(class='chat-login') Login
        a(class='chat-toggle') Show Chat
        
      div(class='chat-body')
        div(class='chat-log')
        textarea(class='chat-input', type='text', placeholder='Send a message', maxlength=250)

      div(class='login-container')
        div(class='login-form')
          div(class='login-fix')
            input(type='text', id='username')
            input(type='password', id='password')
            input(type='submit', class='login-button', value='Login')

      div(class='users-container')
        ul(class='user-list')
          li Loading...

    div(class='cooldown-timer')
    div(class='message')
      span(class='text')
      span(class='close') x
    div(class='palette')

    div(class='bubble-container')
      div(class='bubble')
        a(href='https://discord.gg/t6mHzMZ', target='_blank') Discord
      div(class='bubble')
        a(href='https://www.reddit.com/r/PlaceReloaded/', target='_blank') Subreddit


    div(class='coords') (0, 0)
    div(class='cursor', id='cursor')