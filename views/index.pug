extends layouts/index

block content
  div(class='loading')
    span Loading...
  
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    include includes/sidebar.pug

    div(class='cooldown-timer')
    div(class='message')
      span(class='text')
      span(class='close') x
    
    div(class='bubble-container')
      div(class='bubble')
        a(href='https://discord.gg/t6mHzMZ', target='_blank') Discord
      div(class='bubble')
        a(href='https://www.reddit.com/r/PlaceReloaded/', target='_blank') Subreddit
      div(class='bubble')
        a(href='javascript:App.toURL();', target='_blank') Screenshot

      if enable_restrictions
        div(class='bubble')
          div(class='restricted-toggle') Show Restricted Areas

    div(class='reticule', id='reticule')
    div(class='palette')
    div(class='coords') (0, 0)
    div(class='cursor', id='cursor')
    div(class='pixel-info hide')