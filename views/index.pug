extends layout

block content
  div(class='loading')
    span Loading...
  div(class='reticule', id='reticule')
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    div(class='chat-tab') CHAT
    div(class='chat')
      div(class='chat-log')
      textarea(class='chat-input', type='text', placeholder='Send a message', maxlength=250)

    div(class='cooldown-timer')
    div(class='message')
      span(class='text')
      span(class='close') x
    div(class='palette')

    div(class='bubble-container')
      div(class='bubble')
        a(href='http://pxls.space/', target='_blank') Main Server

    div(class='coords') (0, 0)
    div(class='online') Loading...

    div(class='cursor', id='cursor')