extends layout

block content
  div(class='loading')
    span Loading...
  div(class='reticule', id='reticule')
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    div(class='cooldown-timer')
    div(class='vote-message')
      span(class='text')
      span(class='close') x
    div(class='message')
      span(class='text')
      span(class='close') x
    div(class='palette')
    div(class='vote-container')
      div(class='vote')
        a(href='javascript:void(0)', class='vote-yes') Yes (0)
      div(class='vote')
        a(href='javascript:void(0)', class='vote-no') No (0)

    div(class='coords') (0, 0)
    div(class='online') Loading...

    div(class='cursor', id='cursor')