extends layout

block content
  div(class='loading')
    span Loading...
  div(class='reticule', id='reticule')
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    div(class='sidebar')
      div(class='sidebar-header')
        a(class='toggle-users') 
        a(class='toggle-login') Login
        a(class='toggle-chat') Chat
        
      div(class='chat-container')
        div(class='chat-log')
        div(class='chat-input-container')
          textarea(class='chat-input', type='text', placeholder='Send a message', maxlength=250)

      div(class='login-container')
        div(class='login-form')
          form
            input(type='text', id='username')
            input(type='password', id='password')
            input(type='submit', class='login-button', value='Login')

      div(class='users-container')
        ul(class='user-list')
          li Loading...
        div(class='move-ticker')
          div(class='move-ticker-header') Ticker
          div(class='move-ticker-body')

    div(class='cooldown-timer')
    div(class='message')
      span(class='text')
      span(class='close') x
    div(class='palette')

    div(class='bubble-container')
      div(class='bubble')
        a(href='https://discord.gg/t6mHzMZ', target='_blank') Discord
      div(class='bubble')
        a(href='https://www.reddit.com/r/PlaceReloaded/', target='_blank') Subreddit


    div(class='coords') (0, 0)
    div(class='cursor', id='cursor')