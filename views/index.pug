extends layout

block content
  div(class='loading')
    span Loading...
  div(class='reticule', id='reticule')
  div(class='board-container')
    div(class='board-zoomer')
      div(class='board-mover')
        canvas(id='board', width=100, height=100)

  div(class='ui', id='ui')
    button(class='chat-tab') CHAT
    div(class='chat')
      div(class='chat-log')
      div(class='chat-options')
        div(class='chat-methods')
          button(id='login') Login
          button(id='anonymous') Anonymous
        div(class='chat-auth')
          input(type='text', id='username')
          input(type='password', id='password')
          input(type='submit', id='login-chat', value='Login')
      textarea(class='chat-input', type='text', placeholder='Send a message', maxlength=250)

    div(class='cooldown-timer')
    div(class='message')
      span(class='text')
      span(class='close') x
    div(class='palette')

    div(class='bubble-container')
      div(class='bubble')
        a(href='https://discord.gg/t6mHzMZ', target='_blank') Discord

    div(class='coords') (0, 0)
    div(class='online') Loading...

    div(class='cursor', id='cursor')